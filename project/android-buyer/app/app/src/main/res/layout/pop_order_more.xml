<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_circle_shape"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListView
        android:layout_above="@+id/current_order"
        android:id="@+id/current_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_above="@+id/current_order"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#000000">
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/current_order"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/add_animation"
            android:layout_width="50dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_toRightOf="@+id/add_animation"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/order_amount"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_height="20dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="另需配送费¥"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/delivery_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/next_action"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/circle_shape2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true">
            <TextView
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/next_action_text"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>