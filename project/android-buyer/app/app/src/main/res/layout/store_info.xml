<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/store_background"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:id="@+id/pop_store_more"
        android:layout_width="320dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/circle_shape1">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/store_img"
                android:background="@drawable/circle_shape1"
                android:src="@drawable/store"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:layout_toRightOf="@+id/store_img"
                android:layout_centerVertical="true"
                android:id="@+id/store_name"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="#000000"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/star"/>
                <TextView
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/store_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="月售："/>
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/month_sale_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="公告:"/>
            <TextView
                android:id="@+id/store_announcement"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="店铺详情"
                android:textSize="13sp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:textSize="13sp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/down"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/pop_store_more"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_tab"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:tabIndicatorColor="#FF8C00"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="#000"
            app:tabIndicatorHeight="3dp">
        </com.google.android.material.tabs.TabLayout>
        <LinearLayout
            android:id="@+id/text_line"
            android:layout_below="@+id/tl_tab"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="1px"
            android:background="#B5B5B5"/>
        <androidx.viewpager.widget.ViewPager
            android:layout_below="@+id/text_line"
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>
    </RelativeLayout>
</RelativeLayout>